.container
  %section
    .page-header
      %h2 Contact Me
    .row
      .col-lg-4
        %p Please use this form to contact me about getting in shape
        %address
          68thst at broadway
      .col-lg-8
        =form_for @message, :html => {:class => 'form-horizontal'} do |f|
          -if @message.errors.any?
            .col-lg-10.col-lg-offset-2
              .error_messages
                / %h2=pluralize(@message.errors.count, "error")
                %ul
                  -@message.errors.full_messages.each do |msg|
                    %li=msg
          .form-group
            %label.col-lg-2.control-label{:for=>"contact-name"}
              Name
            .col-lg-10
              =f.text_field :name, :class=>"form-control", :placeholder=>"name"

          .form-group
            %label.col-lg-2.control-label{:for=>"contact-email"}
              Email
            .col-lg-10
              =f.email_field :name, :class=>"form-control", :placeholder=>"Email"

          .form-group
            %label.col-lg-2.control-label{:for=>"contact-message"}
              Message
            .col-lg-10
              =f.text_area :message, :class=>"form-control", :placeholder=>"Message", :cols=>30, :rows=>10

          .form-group
            .col-lg-10.col-lg-offset-2
              =f.submit "Send Message", :class=>"btn btn-primary"